<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodMarketKotlinPractice" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FoodMarketKotlinPractice.noActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="TextView"/>

    <style name="TextView.PoppinsMedium22sp020202">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/main_black</item>
    </style>

    <style name="TextView.PoppinsMedium14sp020202">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_black</item>
    </style>

    <style name="TextView.Poppins14sp020202">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_black</item>
    </style>

    <style name="TextView.PoppinsMedium16sp020202">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_black</item>
    </style>

    <style name="EditText"/>
    <style name="EditText.PoppinsLight14sp020202">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">#8D92A3</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/shape_rectangle_outline_8_020202</item>
    </style>

    <style name="RatingBar">
        <item name="android:colorControlNormal">@color/grey</item>
        <item name="android:colorControlActivated">@color/yellow</item>
    </style>


    <style name="Button"/>
    <style name="Button.Primary">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">#020202</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Button.Secondary">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/main_black</item>
        <item name="tabTextColor">@color/main_black</item>
        <item name="tabIndicatorFullWidth">false</item>

    </style>
</resources>